{
  "compilerOptions": {
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./src", // Directory for your TypeScript files
    "module": "ESNext",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
  },
  "include": ["src/**/*"]
}

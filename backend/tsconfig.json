{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*.ts",
    "src/routes/**/*"
  ],
  "exclude": ["node_modules"]
}

